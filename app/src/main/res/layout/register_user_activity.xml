<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.darklightning.partycatrers.Authentication.RegisterUserFolder.RegisterUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingTop="100dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right">

            <custom_font.MyTextView
                android:id="@+id/sign_in_instead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signin"
                android:textSize="16dp"
                android:layout_gravity="right"
                android:gravity="end"
                android:textColor="#2C3646"
                />
            <LinearLayout
                android:layout_width="39dp"
                android:layout_height="1.5dp"
                android:background="#2C3646"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_signup_container">
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="60dp">
                <custom_font.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or  "
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    android:textColor="#2C3646"
                    />
                <custom_font.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Signup With  "
                    android:textSize="16dp"
                    android:layout_gravity="left"
                    android:textColor="#2C3646"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp"
                    android:paddingTop="50dp">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/google_signip_container"
                    android:layout_margin="10dp"
                    >
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/facebook_signup_container"
                    android:layout_margin="10dp">
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/twitter_signup_container"
                    android:layout_margin="10dp">
                </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

