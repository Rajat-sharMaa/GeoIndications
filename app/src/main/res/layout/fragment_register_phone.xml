<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.darklightning.partycatrers.StartHere.Fragments.RegisterPhoneFragment"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <!--<ImageView-->
        <!--android:id="@+id/zoologo"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:src="@drawable/ic_stars_black_24dp"/>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <custom_font.MyTextView
                android:id="@+id/signin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signin"
                android:textSize="16dp"
                android:layout_gravity="right"
                android:gravity="end"
                android:textColor="#2C3646"
                />
            <LinearLayout
                android:layout_width="39dp"
                android:layout_height="1.5dp"
                android:background="#2C3646"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">
        <custom_font.MyTextView
            android:id="@+id/signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register your phone"
            android:textColor="#00051f"
            android:textSize="17dp"
            android:layout_marginTop="48dp"

            />
        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="USER NAME"
            android:inputType="text"
            android:textColorHint="#a9b0c3"
            android:textSize="13dp"
            android:background="#00000000"
            android:layout_marginTop="42dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"

            />
        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PHONE NUMBER"
            android:inputType="phone"
            android:textColorHint="#a9b0c3"
            android:layout_marginTop="32dp"
            android:textSize="13dp"
            android:background="#00000000"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"
            />

        <custom_font.MyTextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="  Send OTP  "
            android:textStyle="bold"
            android:background="@drawable/round"
            android:textColor="#CBD1DC"
            android:gravity="center"
            android:padding="14dp"
            android:layout_marginTop="42dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:id="@+id/otp_et_1"
                />
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:id="@+id/otp_et_2"/>
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:id="@+id/otp_et_3"
                />
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:id="@+id/otp_et_4"/>
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:id="@+id/otp_et_5"
                />
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:id="@+id/otp_et_6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginTop="40dp">
            <custom_font.MyTextView
                android:id="@+id/resend_otp_mytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP ?"
                android:textSize="16dp"
                android:layout_gravity="right"
                android:gravity="end"
                android:textColor="#2C3646"
                />
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="1.5dp"
                android:background="#2C3646"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                >
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
